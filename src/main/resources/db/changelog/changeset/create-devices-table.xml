<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="5" author="noverlin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="devices"/>
            </not>
        </preConditions>

        <createTable tableName="devices">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="account_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="fingerprint_hash" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="linked_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>