<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="6" author="noverlin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="refresh_tokens"/>
            </not>
        </preConditions>

        <createTable tableName="refresh_tokens">
            <column name="token_id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="device_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="jti" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="revoked" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="revoked_at" type="TIMESTAMP"/>
            <column name="revoke_reason" type="VARCHAR(255)"/>
        </createTable>
        <addUniqueConstraint tableName="refresh_tokens" columnNames="jti" constraintName="uq_refresh_jti"/>
    </changeSet>

</databaseChangeLog>