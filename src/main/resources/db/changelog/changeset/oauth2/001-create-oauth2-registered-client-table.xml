<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Таблица клиентов -->
    <changeSet id="1" author="noverlin">
        <createTable tableName="oauth2_registered_client">
            <column name="id" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="client_id_issued_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="client_secret" type="VARCHAR(200)"/>
            <column name="client_secret_expires_at" type="TIMESTAMP"/>
            <column name="client_name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="client_authentication_methods" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="authorization_grant_types" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="redirect_uris" type="TEXT"/>
            <column name="post_logout_redirect_uris" type="TEXT"/>
            <column name="scopes" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="client_settings" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="token_settings" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_oauth2_registered_client_client_id"
                     tableName="oauth2_registered_client" unique="true">
            <column name="client_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>